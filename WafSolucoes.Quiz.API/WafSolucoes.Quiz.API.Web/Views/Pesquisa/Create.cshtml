<script type="text/javascript">

    function Display(Nome) {
        if ($("#" + Nome).is(":hidden")) {
            $("#" + Nome).show();
            $("#posi" + Nome).hide();
            $("#neg" + Nome).show();
        }
        else {
            $("#" + Nome).hide();
            $("#posi" + Nome).show();
            $("#neg" + Nome).hide();
        }
    }


</script>

