@model WafSistemas.GerenciadorCliente.Service.DTO.Projeto.Projeto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Alterar Projeto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdProjeto" class="control-label"></label>
                <input asp-for="IdProjeto" class="form-control" type="number" />
                <span asp-validation-for="IdProjeto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <div class="form-check form-check">
                    @{ if (Model != null && Model.Status == 0)
                        {
                            <input class="form-check-input" type="radio" name="ckStatus" id="ckStatus0" value="0" checked>
                        }
                        else
                        {
                            <input class="form-check-input" type="radio" name="ckStatus" id="ckStatus0" value="0">
                        }
                    }
                    <label class="form-check-label" for="ckStatus0"><span class="text-danger"><i class="bi bi-file-x-fill"></i> Bloqueado</span></label>
                </div>
                <div class="form-check form-check">
                    @{ if (Model != null && Model.Status == 1)
                        {
                            <input class="form-check-input" type="radio" name="ckStatus" id="ckStatus1" value="1" checked>
                        }
                        else
                        {
                            <input class="form-check-input" type="radio" name="ckStatus" id="ckStatus1" value="1">
                        }
                    }
                    <label class="form-check-label" for="ckStatus1"><span class="text-success"><i class="bi bi-check-circle-fill"></i> Liberado</span></label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-sm btn-secondary"><span><i class="bi bi-backspace"></i> Voltar a Lista</span></a>
</div>

