@model WafSistemas.GerenciadorCliente.Service.DTO.Cliente

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Detalhe Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdCliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdCliente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataCriacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataCriacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CPFCnpj)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CPFCnpj)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Login)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Login)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataAlteracao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataAlteracao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataLiberação)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataLiberação)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @{switch (Convert.ToInt32(Model.Status))
                {
                    case 0:
                        <h4><span> <label class="badge badge-danger"> <i class="bi bi-file-x-fill"></i> [ Bloqueado ] </label> </span></h4>
                        break;
                    case 1:
                        <h4><span> <label class="badge badge-success"><i class="bi bi-check-circle-fill"></i>  [ Liberado ] </label> </span></h4>
                        break;
                    case 2:
                        <h4><span> <label class="badge badge-warning"><i class="bi bi-exclamation-triangle-fill"></i>  [ Pendente ] </label> </span></h4>
                        break;
                    case 3:
                        <h4><span> <label class="badge badge-dark"><i class="bi bi-currency-exchange"></i>  [ Inadimplente ] </label> </span></h4>
                        break;
                    case 4:
                        <h4><span> <label class="badge badge-primary"><i class="bi bi-gift-fill"></i>  [ Cortesia ] </label> </span></h4>
                        break;
                    case 5:
                        <h4><span> <label class="badge badge-info"><i class="bi bi-award-fill"></i>  [ Vip ] </label> </span></h4>
                        break;
                    case 6:
                        <h4><span> <label class="badge badge-secondary"><i class="bi bi-incognito"></i>  [ Teste ] </label> </span></h4>
                        break;
                    case 9:
                        <h4><span> <label class="badge badge-primary"><i class="bi bi-file-earmark-fill"></i>  [ Cadastrado ] </label> </span></h4>
                        break;
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-sm btn-info" data-toggle="tooltip" data-placement="left" title="Alterar" href="@Url.Action("Edit", "Cliente",new { id = Model.IdCliente })"><span><i class='bi bi-pencil-square'></i> Alterar</span></a>
    <a asp-action="Index" class="btn btn-sm btn-secondary"><span><i class="bi bi-backspace"></i> Voltar a Lista</span></a>
</div>
