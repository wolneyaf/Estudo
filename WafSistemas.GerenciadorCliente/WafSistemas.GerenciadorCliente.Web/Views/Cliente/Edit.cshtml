@model WafSistemas.GerenciadorCliente.Service.DTO.Cliente

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-size {
        width: 60px
    }
</style>

<h4>Alterar Dados do Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label"></label>
                <input asp-for="IdCliente" class="form-control" readonly />
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataCriacao" class="control-label"></label>
                <input asp-for="DataCriacao" class="form-control" readonly />
                <span asp-validation-for="DataCriacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPFCnpj" class="control-label"></label>
                <input asp-for="CPFCnpj" class="form-control" />
                <span asp-validation-for="CPFCnpj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" readonly />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <div class="form-check form-check">
                    @{ if (Model != null && Model.Status == 0)
                        {
                            <input class="form-check-input" type="radio" name="ckStatus" id="ckStatus0" value="0" checked>
                        }
                        else
                        {
                            <input class="form-check-input" type="radio" name="ckStatus" id="ckStatus0" value="0">
                        }
                    }
                    <label class="form-check-label" for="ckStatus0"><span class="text-danger"><i class="bi bi-file-x-fill"></i> Bloqueado</span></label>
                </div>
                <div class="form-check form-check">
                    @{ if (Model != null && Model.Status == 1)
                        {
                            <input class="form-check-input" type="radio" name="ckStatus" id="ckStatus1" value="1" checked>
                        }
                        else
                        {
                            <input class="form-check-input" type="radio" name="ckStatus" id="ckStatus1" value="1">
                        }
                    }
                    <label class="form-check-label" for="ckStatus1"><span class="text-success"><i class="bi bi-check-circle-fill"></i> Liberado</span></label>
                </div>
                <div class="form-check form-check">
                    @{ if (Model != null && Model.Status == 2)
                        {
                            <input class="form-check-input" type="radio" name="ckStatus" id="ckStatus2" value="2" checked>
                        }
                        else
                        {
                            <input class="form-check-input" type="radio" name="ckStatus" id="ckStatus2" value="2">
                        }
                    }
                    <input class="form-check-input" type="radio" name="ckStatus" id="ckStatus2" value="2">
                    <label class="form-check-label" for="ckStatus2"><span class="text-warning"><i class="bi bi-exclamation-triangle-fill"></i> Pendente</span></label>
                </div>
                <div class="form-check form-check">
                    @{ if (Model != null && Model.Status == 3)
                        {
                            <input class="form-check-input" type="radio" name="ckStatus" id="ckStatus3" value="3" checked>
                        }
                        else
                        {
                            <input class="form-check-input" type="radio" name="ckStatus" id="ckStatus3" value="3">
                        }
                    }
                    <input class="form-check-input" type="radio" name="ckStatus" id="ckStatus3" value="3">
                    <label class="form-check-label" for="ckStatus3"><span class="text-dark"><i class="bi bi-currency-exchange"></i> Inadimplente</span></label>
                </div>
                <div class="form-check form-check">
                    @{ if (Model != null && Model.Status == 4)
                        {
                            <input class="form-check-input" type="radio" name="ckStatus" id="ckStatus4" value="4" checked>
                        }
                        else
                        {
                            <input class="form-check-input" type="radio" name="ckStatus" id="ckStatus4" value="4">
                        }
                    }
                    <input class="form-check-input" type="radio" name="ckStatus" id="ckStatus4" value="4">
                    <label class="form-check-label" for="ckStatus4"><span class="text-primary"><i class="bi bi-gift-fill"></i> Cortesia</span></label>
                </div>
                <div class="form-check form-check">
                    @{ if (Model != null && Model.Status == 5)
                        {
                            <input class="form-check-input" type="radio" name="ckStatus" id="ckStatus5" value="5" checked>
                        }
                        else
                        {
                            <input class="form-check-input" type="radio" name="ckStatus" id="ckStatus5" value="5">
                        }
                    }
                    <input class="form-check-input" type="radio" name="ckStatus" id="ckStatus5" value="5">
                    <label class="form-check-label" for="ckStatus5"><span class="text-info"><i class="bi bi-award-fill"></i> Vip</span></label>
                </div>
                <div class="form-check form-check">
                    @{ if (Model != null && Model.Status == 6)
                        {
                            <input class="form-check-input" type="radio" name="ckStatus" id="ckStatus6" value="6" checked>
                        }
                        else
                        {
                            <input class="form-check-input" type="radio" name="ckStatus" id="ckStatus6" value="6">
                        }
                    }

                    <label class="form-check-label" for="ckStatus6"><span class="text-secondary"><i class="bi bi-incognito"></i> Teste</span></label>
                </div>
                <div class="form-check form-check">
                    @{ if (Model != null && Model.Status == 9)
                        {
                            <input class="form-check-input" type="radio" name="ckStatus" id="ckStatus9" value="9" checked>
                        }
                        else
                        {
                            <input class="form-check-input" type="radio" name="ckStatus" id="ckStatus9" value="9">
                        }
                    }

                    <label class="form-check-label" for="ckStatus9"><span class="text-primary"><i class="bi bi-file-earmark-fill"></i> Cadastro</span></label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
    
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

